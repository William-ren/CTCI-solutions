#include <iostream>
using namespace std;
int updateBits( int m, int& n, int i, int j){
    int allones = ~0;
    int left = allones << (j+1);
    int right = (1<<i)-1;
    int mask = left|right;
    n&=mask;
    int m_shifted=m<<i;
    return n|m_shifted;
}
