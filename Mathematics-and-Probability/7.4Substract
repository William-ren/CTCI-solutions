#include <iostream>
using namespace std;
int Negate( int num) {
    int d = num<0 ? 1:-1;
    int result = 0;
    while (num!=0) {
        result+=d;
        num+=d;
    }
    return result;
}
int minus (int a, int b){
    return a + Negate(b);
}
