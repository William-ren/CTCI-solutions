#include <iostream>
#include <stack>
using namespace std;
class minStack{
public:
    void push(int val){
        mystack.push(val);
        if (minNum.empty()) {
            minNum.push(val);
        }
        else {
            if (val<=minNum.top()) {
                minNum.push(val);
            }
        }
        
    }
    void pop(){
        if (mystack.empty()) {
            return;
        }
        if (mystack.top()==minNum.top()) {
            minNum.pop();
        }
        mystack.pop();
    }
    int minValue(){
        if (minNum.empty()) {
            return INT_MIN;
        }
        else return minNum.top();
    }
private:
    stack<int> mystack;
    stack<int> minNum;
};
